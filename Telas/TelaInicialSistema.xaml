<Page x:Class="IBeauty.Telas.TelaInicialSistema"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IBeauty.Telas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TelaInicialSistema">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagens/fundologin.png"/>
        </Grid.Background>
        <Border BorderBrush="#FFB6667C" BorderThickness="1" CornerRadius="10" Padding="20" Width="555" Height="130" Background="#8CB6667C">
            <StackPanel>
                <TextBlock Foreground="White" FontFamily="Poppins" FontSize="24" HorizontalAlignment="Center">Olá, Usuario!</TextBlock>
                <TextBlock Foreground="White" FontFamily="Poppins" FontSize="14">Bem vindo ao sistema de gerenciamento de salão</TextBlock>
                <TextBlock Foreground="White" FontFamily="Poppins" FontSize="14">Utilize o menu na lateral para ter acesso às funcionalidades do sistema</TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Page>
